rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Allow users to read their own profile, and admins to read any profile.
    // Allow users to write to their own profile.
    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Success stories can be read by anyone if approved.
    // Users can create their own stories.
    match /success_stories/{storyId} {
      allow get: if resource.data.status == 'approved';
      allow list: if true;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
    }

    // Allow users to read and write their own volunteer data
    match /volunteers/{volunteerId} {
        allow read, write: if request.auth != null && request.auth.uid == volunteerId;
    }
    
    // Voice and Video chat rooms
    match /voice_chat_rooms/{roomId} {
        allow read, create: if request.auth != null;
        allow update: if request.auth != null; // Allows joining/leaving
    }

    match /video_chat_rooms/{roomId} {
        allow read, create: if request.auth != null;
        allow update: if request.auth != null; // Allows joining/leaving
    }

    // Forum Posts
    match /forum_posts/{postId} {
        allow read, list: if true;
        allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
        // Allow authenticated users to like/unlike posts
        allow update(likes): if request.auth != null;
        // Allow comment count to be updated internally by comment creation
        allow update(commentCount): if request.auth != null;
    }

    // Forum Comments
    match /forum_posts/{postId}/comments/{commentId} {
        allow read, list: if true;
        // Allow authenticated users to create comments
        allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
    }
  }
}
