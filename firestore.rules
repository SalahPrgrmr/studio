rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // User Profiles Collection
    match /users/{userId} {
      // Allow anyone to read user profiles (public data)
      allow get: if true;
      
      // Allow users to create and update their own profile
      allow create, update: if isOwner(userId);

      // Explicitly deny list and delete for security
      allow list, delete: if false;
    }
    
    // Volunteers Collection
    match /volunteers/{volunteerId} {
      allow get, list: if true;
      allow create: if request.auth != null && isOwner(volunteerId) && request.resource.data.id == volunteerId;
      allow update: if request.auth != null && isOwner(volunteerId);
      allow delete: if request.auth != null && isOwner(volunteerId);
    }
    
    // Partners Collection
    match /partners/{partnerId} {
        allow get, list: if true;
        allow create, update, delete: if request.auth != null;
    }
    
    // Participants sub-collection
    match /events/{eventId}/participants/{participantId} {
        allow read, write: if request.auth != null;
    }

    // Success Stories Collection
    match /success_stories/{storyId} {
      allow get: if resource.data.status == 'approved' || (request.auth != null && isOwner(resource.data.authorId));
      allow list: if true;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update: if false; 
      allow delete: if request.auth != null && isOwner(resource.data.authorId);
    }
    
    // Voice Chat Rooms Collection
    match /voice_chat_rooms/{roomId} {
      allow get, list: if true;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && isOwner(resource.data.ownerId);
    }

    // Video Chat Rooms Collection
    match /video_chat_rooms/{roomId} {
      allow get, list: if true;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && isOwner(resource.data.ownerId);
    }
  }
}
