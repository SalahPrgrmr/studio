rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // السماح بالقراءة للجميع
      allow read: if true;

      // الكتابة فقط لصاحب الحساب
      allow write: if request.auth != null
                   && request.auth.uid == userId;

      // إعدادات المستخدم
      match /settings/{docId} {
        allow read: if true;
        allow write: if request.auth != null
                     && request.auth.uid == userId;
      }
    }

  }
}
