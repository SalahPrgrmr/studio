
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public read, but only authenticated users can create/update their own.
    match /success_stories/{storyId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
    
    // Public read for forum, but authenticated users for actions.
    match /forum_posts/{postId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
        
        match /comments/{commentId} {
            allow read: if true;
            allow create: if request.auth != null;
        }
    }
    
    // Public read for chat rooms, authenticated for creation/updates.
    match /voice_chat_rooms/{roomId} {
        allow read: if true;
        allow create, update: if request.auth != null;
    }
    
    match /video_chat_rooms/{roomId} {
        allow read: if true;
        allow create, update: if request.auth != null;
    }
    
    // Volunteers can only manage their own document.
    match /volunteers/{volunteerId} {
        allow read, write: if request.auth != null && request.auth.uid == volunteerId;
    }

  }
}
