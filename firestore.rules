rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // === Public & Semi-Public Collections ===

    match /share_center_items/{itemId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    match /practical_activities/{activityId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    match /cosmic_signs/{signId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    match /blessings_and_signs/{signId} {
        allow read: if true;
        allow create: if request.auth != null;
    }

    // Logged-in users can read and create success stories.
    // They can only update their own stories.
    match /success_stories/{storyId} {
        allow read, create: if request.auth != null;
        allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
    }

    // Anyone can create contact messages. Admins will read them later.
    match /contact_messages/{messageId} {
        allow create: if true;
    }

    // === Feature-specific Rules ===

    match /forum_posts/{postId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if request.auth != null && request.auth.uid == resource.data.authorId;

        match /comments/{commentId} {
            allow read: if true;
            allow create: if request.auth != null;
        }
    }

    match /voice_chat_rooms/{roomId} {
        allow read: if true;
        allow create, update: if request.auth != null;
    }

    match /video_chat_rooms/{roomId} {
        allow read: if true;
        allow create, update: if request.auth != null;
    }

    match /volunteers/{volunteerId} {
        allow read, write: if request.auth != null && request.auth.uid == volunteerId;
    }
  }
}
