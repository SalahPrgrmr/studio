rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /volunteers/{volunteerId} {
      allow get, list: if true;
      allow create: if request.auth != null && isOwner(volunteerId) && request.resource.data.id == volunteerId;
      allow update: if request.auth != null && isOwner(volunteerId);
      allow delete: if request.auth != null && isOwner(volunteerId);
    }

    match /success_stories/{storyId} {
      allow get: if resource.data.status == 'approved' || (request.auth != null && isOwner(resource.data.authorId));
      allow list: if true;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update: if false; 
      allow delete: if request.auth != null && isOwner(resource.data.authorId);
    }
    
    match /voice_chat_rooms/{roomId} {
      allow get, list: if true;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && isOwner(resource.data.ownerId);
    }

    match /video_chat_rooms/{roomId} {
      allow get, list: if true;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && isOwner(resource.data.ownerId);
    }
  }
}
