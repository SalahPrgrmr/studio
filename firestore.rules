rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
      // Any authenticated user can list the users collection
      allow list: if request.auth != null;
      // Any authenticated user can read another user's profile
      allow get: if request.auth != null;
      // A user can update and delete their own profile document.
      allow update, delete: if request.auth != null && request.auth.uid == userId;
      // Anyone can create a user document (handled by cloud function)
      allow create: if true;
    }
    
    // Stories are public to read, but only authenticated users can create.
    // Only the author can update their own story.
    match /success_stories/{storyId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
    
    // Forum posts are public to read.
    // Authenticated users can create posts and comments.
    // Only authors can update their own posts.
    match /forum_posts/{postId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
        
        match /comments/{commentId} {
            allow read: if true;
            allow create: if request.auth != null;
        }
    }
    
    // Chat rooms are public to read.
    // Only authenticated users can create or update them.
    match /voice_chat_rooms/{roomId} {
        allow read: if true;
        allow create, update: if request.auth != null;
    }
    
    match /video_chat_rooms/{roomId} {
        allow read: if true;
        allow create, update: if request.auth != null;
    }
    
    // Volunteers can only manage their own document.
    match /volunteers/{volunteerId} {
        allow read, write: if request.auth != null && request.auth.uid == volunteerId;
    }
  }
}
