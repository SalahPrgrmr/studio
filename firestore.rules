rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }
    
    // Function to check if a user has a specific role from their profile
    function hasRole(role) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // User Profiles Collection
    match /users/{userId} {
      // Admins can list all users. A user can get their own profile. Authenticated users can get any profile.
      allow get: if isSignedIn();
      allow list: if isAdmin();
      
      // A user can create their own profile. An admin can create any profile.
      allow create: if isOwner(userId) || isAdmin();

      // An admin can update any profile. A user can update their own, but cannot change their role.
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);

      // Only admins can delete profiles.
      allow delete: if isAdmin();
    }
    
    // Volunteers Collection
    match /volunteers/{volunteerId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isOwner(volunteerId) && request.resource.data.id == volunteerId;
      allow update: if isSignedIn() && isOwner(volunteerId);
      allow delete: if isSignedIn() && isOwner(volunteerId);
    }
    
    // Partners Collection
    match /partners/{partnerId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
    }
    
    // Participants sub-collection
    match /events/{eventId}/participants/{participantId} {
        allow read, write: if isSignedIn();
    }

    // Success Stories Collection
    match /success_stories/{storyId} {
      allow get: if resource.data.status == 'approved' || (isSignedIn() && isOwner(resource.data.authorId)) || isAdmin();
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isAdmin() || hasRole('editor'); 
      allow delete: if isSignedIn() && (isOwner(resource.data.authorId) || isAdmin());
    }
    
    // Voice Chat Rooms Collection
    match /voice_chat_rooms/{roomId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && (isOwner(resource.data.ownerId) || isAdmin());
    }

    // Video Chat Rooms Collection
    match /video_chat_rooms/{roomId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && (isOwner(resource.data.ownerId) || isAdmin());
    }
  }
}
