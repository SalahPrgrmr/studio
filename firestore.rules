rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Volunteers Collection
    // - Anyone can read volunteer profiles.
    // - Only signed-in users can create/update a volunteer profile for themselves.
    match /volunteers/{volunteerId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isOwner(volunteerId) && request.resource.data.id == volunteerId;
      allow update: if isSignedIn() && isOwner(volunteerId);
      allow delete: if isSignedIn() && isOwner(volunteerId);
    }
    
    // Members Collection
    // - Anyone can read member profiles.
    // - Only signed-in users can create/update a member profile for themselves.
    match /members/{memberId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isOwner(memberId);
      allow update: if isSignedIn() && isOwner(memberId);
      allow delete: if isSignedIn() && isOwner(memberId);
    }
    
    // Partners Collection
    // - Anyone can read partner profiles.
    // - Creating, updating, deleting partners might be admin-only in the future.
    match /partners/{partnerId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn(); // Allow for now, tighten later.
    }
    
    // Participants sub-collection
    match /events/{eventId}/participants/{participantId} {
        allow read, write: if isSignedIn(); // Basic rule, can be refined based on event privacy
    }

    // Success Stories Collection
    // - Anyone can read approved stories.
    // - Only authenticated users can create stories (for review).
    // - Admins (future) or owners can update/delete.
    match /success_stories/{storyId} {
      allow get: if resource.data.status == 'approved';
      allow list: if resource.data.status == 'approved'; // Should only list approved stories
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      // Allow owner to update/delete their own story, might add admin role later.
      allow update, delete: if isSignedIn() && isOwner(resource.data.authorId);
    }
    
    // Voice Chat Rooms Collection
    // - Anyone can read/list rooms.
    // - Authenticated users can create rooms.
    // - Owner or members can update (join/leave).
    // - Only owner can delete.
    match /voice_chat_rooms/{roomId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && (isOwner(resource.data.ownerId) || request.auth.uid in resource.data.members);
      allow delete: if isSignedIn() && isOwner(resource.data.ownerId);
    }

    // Video Chat Rooms Collection
    // - Anyone can read/list rooms.
    // - Authenticated users can create rooms.
    // - Owner or members can update (join/leave).
    // - Only owner can delete.
    match /video_chat_rooms/{roomId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && (isOwner(resource.data.ownerId) || request.auth.uid in resource.data.members);
      allow delete: if isSignedIn() && isOwner(resource.data.ownerId);
    }
  }
}
