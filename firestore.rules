rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole(request.auth.uid) == 'admin';
    }

    // User Profiles Collection
    // - A user can read and write their own profile.
    // - An admin can read all profiles and update any field.
    // - A user cannot change their own role.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Volunteers Collection
    // - Anyone can read volunteer profiles.
    // - Only signed-in users can create/update a volunteer profile for themselves.
    match /volunteers/{volunteerId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isOwner(volunteerId) && request.resource.data.id == volunteerId;
      allow update: if isSignedIn() && isOwner(volunteerId);
      allow delete: if isSignedIn() && isOwner(volunteerId);
    }
    
    // Partners Collection
    // - Anyone can read partner profiles.
    // - Creating, updating, deleting partners is restricted to authenticated users.
    match /partners/{partnerId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
    }
    
    // Participants sub-collection
    match /events/{eventId}/participants/{participantId} {
        allow read, write: if isSignedIn(); // Basic rule, can be refined based on event privacy
    }

    // Success Stories Collection
    // - Anyone can read approved stories.
    // - Only authenticated users can create stories for themselves (for review).
    // - Admins can approve stories.
    // - Owner can delete their own story. Admin can delete any story.
    match /success_stories/{storyId} {
      allow get: if resource.data.status == 'approved' || (isSignedIn() && isOwner(resource.data.authorId)) || isAdmin();
      allow list: if resource.data.status == 'approved';
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isAdmin(); // Only admins can change status from 'pending' to 'approved'
      allow delete: if isSignedIn() && (isOwner(resource.data.authorId) || isAdmin());
    }
    
    // Voice Chat Rooms Collection
    // - Anyone can read/list rooms.
    // - Authenticated users can create rooms.
    // - Owner or members can update (join/leave).
    // - Only owner can delete.
    match /voice_chat_rooms/{roomId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn(); // Allow any signed-in user to join/leave for simplicity
      allow delete: if isSignedIn() && (isOwner(resource.data.ownerId) || isAdmin());
    }

    // Video Chat Rooms Collection
    // - Anyone can read/list rooms.
    // - Authenticated users can create rooms.
    // - Owner or members can update (join/leave).
    // - Only owner can delete.
    match /video_chat_rooms/{roomId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn(); // Allow any signed-in user to join/leave for simplicity
      allow delete: if isSignedIn() && (isOwner(resource.data.ownerId) || isAdmin());
    }
  }
}
