{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User Profile",
      "type": "object",
      "description": "Stores public-facing user profile information, stats, and achievements.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user, same as the user's UID."
        },
        "displayName": {
          "type": "string",
          "description": "The user's public display name."
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "description": "The user's role, e.g., 'admin', 'user', 'editor', 'moderator'.",
          "enum": [
            "admin",
            "editor",
            "moderator",
            "user"
          ],
          "default": "user"
        },
        "points": {
          "type": "number",
          "description": "Gamification points earned by the user.",
          "default": 0
        },
        "title": {
          "type": "string",
          "description": "The current title or rank of the user based on points.",
          "default": "مستكشف"
        },
        "badges": {
          "type": "array",
          "description": "A list of badge IDs the user has earned.",
          "items": {
            "type": "string"
          }
        },
        "stats": {
          "type": "object",
          "properties": {
            "storiesPublished": {
              "type": "number",
              "default": 0
            },
            "forumPosts": {
              "type": "number",
              "default": 0
            },
            "audioContributions": {
              "type": "number",
              "default": 0
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "displayName",
        "email",
        "points",
        "title",
        "role"
      ]
    },
    "SuccessStory": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Success Story",
      "type": "object",
      "description": "Represents a user-submitted story of their journey to certainty.",
      "properties": {
        "title": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "authorId": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "creationDate": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending_review",
            "approved"
          ]
        },
        "imageId": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "author",
        "authorId",
        "content",
        "creationDate",
        "status"
      ]
    },
    "Volunteer": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Volunteer",
      "type": "object",
      "description": "Represents a volunteer contributing to the platform.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the volunteer, same as the user's UID."
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phoneNumber": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "availability": {
          "type": "string",
          "enum": [
            "few_hours_week",
            "part_time",
            "full_time"
          ]
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "interests": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "string"
        },
        "agreedToTerms": {
          "type": "boolean",
          "description": "Indicates if the volunteer has agreed to the terms of service."
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the last update to the volunteer's information."
        }
      },
      "required": [
        "id",
        "firstName",
        "lastName",
        "email",
        "availability",
        "skills",
        "interests",
        "agreedToTerms"
      ]
    },
    "VoiceChatRoom": {
      "title": "Voice Chat Room",
      "type": "object",
      "description": "Represents a live audio chat room.",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "ownerId": {
          "type": "string"
        },
        "creationDate": {
          "type": "string",
          "format": "date-time"
        },
        "members": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "enum": [
              "owner",
              "speaker",
              "listener"
            ]
          }
        }
      },
      "required": [
        "name",
        "ownerId",
        "creationDate",
        "members"
      ]
    },
    "VideoChatRoom": {
      "title": "Video Chat Room",
      "type": "object",
      "description": "Represents a live video broadcast room.",
      "properties": {
        "name": {
          "type": "string"
        },
        "presenter": {
          "type": "string"
        },
        "ownerId": {
          "type": "string"
        },
        "creationDate": {
          "type": "string",
          "format": "date-time"
        },
        "members": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "enum": [
              "owner",
              "viewer"
            ]
          }
        }
      },
      "required": [
        "name",
        "presenter",
        "ownerId",
        "creationDate",
        "members"
      ]
    },
    "ForumPost": {
      "title": "Forum Post",
      "type": "object",
      "description": "A single post in the community forum.",
      "properties": {
        "title": { "type": "string" },
        "content": { "type": "string" },
        "author": { "type": "string" },
        "authorId": { "type": "string" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "timestamp": { "type": "string", "format": "date-time" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "likes": { "type": "array", "items": { "type": "string" } },
        "commentCount": { "type": "number", "default": 0 }
      },
      "required": ["title", "content", "author", "authorId", "timestamp"]
    },
    "ForumComment": {
      "title": "Forum Comment",
      "type": "object",
      "description": "A comment on a forum post.",
      "properties": {
        "author": { "type": "string" },
        "authorId": { "type": "string" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "text": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["author", "authorId", "text", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "github",
      "google",
      "facebook",
      "twitter"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public user profile data, including gamification stats and badges."
    },
    "/success_stories/{storyId}": {
      "schema": {
        "$ref": "#/entities/SuccessStory"
      },
      "description": "Stores user-submitted success stories. Requires admin approval."
    },
    "/volunteers/{volunteerId}": {
      "schema": {
        "$ref": "#/entities/Volunteer"
      },
      "description": "Stores volunteer registration information. Each document ID is the UID of the user."
    },
    "/voice_chat_rooms/{roomId}": {
      "schema": {
        "$ref": "#/entities/VoiceChatRoom"
      },
      "description": "Stores data for live voice chat rooms."
    },
    "/video_chat_rooms/{roomId}": {
      "schema": {
        "$ref": "#/entities/VideoChatRoom"
      },
      "description": "Stores data for live video broadcast rooms."
    },
    "/forum_posts/{postId}": {
      "schema": { "$ref": "#/entities/ForumPost" },
      "description": "Stores main posts for the community forum."
    },
    "/forum_posts/{postId}/comments/{commentId}": {
      "schema": { "$ref": "#/entities/ForumComment" },
      "description": "Stores comments for a specific forum post."
    }
  }
}
